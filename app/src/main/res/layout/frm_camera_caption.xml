<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView android:id="@+id/camcap_imgView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <EditText
        android:id="@+id/camcap_edit"
        android:background="#50e8e6ed"
        android:lines="1"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine" >
    </EditText>

    <Button
        android:id="@+id/camcap_btn_proses"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/skyblue"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:text="Proses" />

    <Button
        android:id="@+id/camcap_btn_cancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#FF0000"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:text="Batal" />

    <Spinner
        android:id="@+id/camcap_obyek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/camcap_edit"
        android:layout_alignLeft="@+id/camcap_edit"
        android:layout_alignRight="@+id/camcap_edit" />

</RelativeLayout>
